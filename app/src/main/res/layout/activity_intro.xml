<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.intro.IntroActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerIntro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        />


    <ProgressBar
        android:id="@+id/progressBarIntro"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progress_intro"
        app:layout_constraintBottom_toTopOf="@id/imageViewGoNext"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="18dp"
        android:layout_height="4dp"
        android:layout_width="0dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:progress="0"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageViewGoNext"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:src="@drawable/btn_intro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>