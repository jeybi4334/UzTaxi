<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">





    <ImageView
        android:id="@+id/imageViewNexia"
        android:layout_width="156dp"
        android:layout_height="100dp"
        android:src="@drawable/nexia_dark"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleX="-1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        />

        <TextView
            android:id="@+id/textViewCarName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/imageViewNexia"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp"
            android:text="Nexia 3 Black - "
            android:textColor="#222B45"
            android:fontFamily="@font/g_semi_bold"
            android:textSize="16sp"
            />
    <TextView
        android:id="@+id/textViewCarNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/textViewCarName"
        app:layout_constraintTop_toTopOf="@id/textViewCarName"
        android:text="01A568AA"
        android:fontFamily="@font/g_bold"
        android:textColor="#222B45"
        android:layout_marginStart="2dp"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/textViewDriverName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#222B45"
        android:text="Abu Bakr Islomov"
        app:layout_constraintTop_toBottomOf="@id/textViewCarName"
        app:layout_constraintLeft_toLeftOf="@id/textViewCarName"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/g_semi_bold"
        />

    <ImageView
        android:id="@+id/imageStar"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_filled_star"
        app:layout_constraintTop_toBottomOf="@id/textViewDriverName"
        app:layout_constraintLeft_toLeftOf="@id/textViewDriverName"
        android:layout_marginTop="4dp"
        />

    <TextView
        android:id="@+id/textViewRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#222B45"
        android:text="4.8"
        app:layout_constraintTop_toBottomOf="@id/textViewDriverName"
        app:layout_constraintLeft_toRightOf="@id/imageStar"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/g_semi_bold"
        />

    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@id/imageViewNexia"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#E4E9F2"
        android:alpha="0.5"
        />

    <RelativeLayout
        android:id="@+id/rvCall"
        android:layout_width="80dp"
        android:layout_height="48dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        android:layout_marginTop="16dp"
        android:layout_marginEnd= "18dp"
        android:background="@drawable/bc_button_purple_stroke"
        android:clickable="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Share"
            android:fontFamily="@font/g_bold"
            android:textColor="@color/purple_200"
            android:textSize="16sp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rvEditRide"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintRight_toLeftOf="@id/rvCall"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="18dp"
        android:background="@drawable/bc_button_purple"
        android:clickable="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Edit Ride"
            android:fontFamily="@font/g_bold"
            android:textColor="@color/white"
            android:textSize="16sp"
            />

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>