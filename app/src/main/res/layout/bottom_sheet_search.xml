<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/rvFromWhere"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:background="@drawable/bc_search"
        android:layout_marginTop="16dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        >

        <ImageView
            android:id="@+id/imageFrom"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/start_m"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            />

        <EditText
            android:id="@+id/editTextFromWhere"
            android:layout_width="match_parent"
            android:layout_marginRight="12dp"
            android:inputType="textLongMessage"
            android:maxLines="1"
            android:imeOptions="actionSearch"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="Откуда поедете?"
            android:fontFamily="@font/g_bold"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:clickable="false"
            android:textColor="@color/purple_200"
            android:textColorHint="#D6CAD9"
            android:alpha="0.9"
            android:textSize="16sp"
            android:layout_toRightOf="@id/imageFrom"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rvWhereTo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bc_search"
        android:layout_marginTop="20dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        >

        <ImageView
            android:id="@+id/imageSearch"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_search"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            />

        <EditText
            android:id="@+id/editTextSearch"
            android:layout_width="match_parent"
            android:layout_marginRight="4dp"
            android:inputType="textLongMessage"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:hint="Куда мы едем??"
            android:layout_toLeftOf="@id/imageMap"
            android:fontFamily="@font/g_bold"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:clickable="false"
            android:textColor="@color/purple_200"
            android:textColorHint="@color/purple_200"
            android:alpha="0.9"
            android:textSize="16sp"
            android:layout_toRightOf="@id/imageSearch"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            />


        <ImageView
            android:id="@+id/imageMap"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="15dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_map_small"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            />


    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        >


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.45" />


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"

            android:layout_marginStart="18dp"
            android:layout_marginEnd="6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/guideline"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F3F0F4"
            app:cardCornerRadius="18dp"
            >

            <RelativeLayout
                android:id="@+id/rvDelivery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Доставка"
                    android:fontFamily="@font/g_bold"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:textSize="15sp"
                    />

                <ImageView
                    android:id="@+id/imageDelivery"
                    android:layout_width="68dp"
                    android:layout_height="80dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/deliv"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="-12dp"
                    android:layout_marginTop="-12dp"
                    android:layout_marginBottom="-12dp"
                    />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="18dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/guideline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F3F0F4"
            app:cardCornerRadius="18dp"
            >

            <RelativeLayout
                android:id="@+id/rvAddAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bc_search"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Добавить адрес"
                    android:fontFamily="@font/g_bold"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:textSize="15sp"
                    />

                <ImageView
                    android:id="@+id/imageAddress"
                    android:layout_width="68dp"
                    android:layout_height="80dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/addr"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="-12dp"
                    android:layout_marginTop="-12dp"
                    android:layout_marginBottom="-12dp"
                    />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textViewNoAddress"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:text="История адресов не найдена"
        android:fontFamily="@font/g_regular"
        android:textColor="@color/black"
        />

    <ProgressBar
        android:id="@+id/progressBarSearch"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:visibility="gone"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSearchHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingTop="12dp"
        android:paddingBottom="56dp"
         />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="36dp"
        android:text="© 2020 Designed by Abu Bakr and \nDeveloped by JeyBi."
        android:gravity="center"
        android:textSize="11sp"
        android:fontFamily="@font/g_light"
        android:textColor="@color/black"
        />


</LinearLayout>

