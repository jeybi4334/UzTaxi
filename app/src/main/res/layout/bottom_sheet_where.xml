<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginBottom="42dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <TextView
        android:id="@+id/textViewStartAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:alpha="0.8"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:text=""
        app:layout_constraintRight_toLeftOf="@id/viewDividerMap"
        app:layout_constraintLeft_toRightOf="@id/iconStart"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/g_semi_bold"
        android:textSize="15sp"
        android:ellipsize="end"
        android:maxLines="1"
        />

    <ImageView
        android:id="@+id/iconStart"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_circle_start"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/textViewStartAddress"
        app:layout_constraintBottom_toBottomOf="@id/textViewStartAddress"
        android:layout_marginStart="24dp"
        />

    <TextView
        android:id="@+id/textViewDestination"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:alpha="0.8"
        app:layout_constraintTop_toBottomOf="@id/textViewStartAddress"
        android:layout_marginTop="16dp"
        android:text="@string/around_city"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintRight_toLeftOf="@id/viewDividerMap"
        android:layout_marginEnd="12dp"
        app:layout_constraintLeft_toRightOf="@id/iconStart"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/g_semi_bold"
        android:textSize="15sp"
        />

    <ImageView
        android:id="@+id/iconEnd"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_circle_end"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/textViewDestination"
        app:layout_constraintBottom_toBottomOf="@id/textViewDestination"
        android:layout_marginStart="24dp"
        />


    <ImageView
        android:id="@+id/imageViewSelectFromMap"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewStartAddress"
        android:layout_marginEnd="18dp"
        android:src="@drawable/ic_map_small"
        android:padding="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        />


    <View
        android:id="@+id/viewDividerMap"
        android:layout_width="2dp"
        android:layout_height="28dp"
        android:background="@drawable/bc_handler_bottomsheet"
        app:layout_constraintRight_toLeftOf="@id/imageViewSelectFromMap"
        app:layout_constraintTop_toTopOf="@id/imageViewSelectFromMap"
        app:layout_constraintBottom_toBottomOf="@id/imageViewSelectFromMap"
        android:alpha="0.14"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCars"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:paddingStart="16dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/viewDividerMap"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        />

    <ImageView
        android:id="@+id/imageViewPaymentMethod"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recyclerViewCars"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:paddingTop="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:src="@drawable/ic_cash"
        android:background="?attr/selectableItemBackgroundBorderless"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/imageViewPaymentMethod"
        app:layout_constraintRight_toLeftOf="@id/imageViewArrow"
        app:layout_constraintTop_toTopOf="@id/imageViewArrow"
        app:layout_constraintBottom_toBottomOf="@id/imageViewArrow"
        android:text="@string/cash"
        android:textSize="16sp"
        android:textColor="#303030"
        android:fontFamily="@font/g_semi_bold"
        android:gravity="center"
        />

    <ImageView
    android:id="@+id/imageViewArrow"
    android:layout_width="48dp"
    android:layout_height="48dp"
    app:layout_constraintRight_toLeftOf="@id/imageViewFilterCar"
    app:layout_constraintTop_toBottomOf="@id/recyclerViewCars"
    android:layout_marginTop="12dp"
    android:src="@drawable/ic_arrow_bottom"
    android:padding="16dp"
    android:background="?attr/selectableItemBackgroundBorderless"
    />

    <ImageView
        android:id="@+id/imageViewFilterCar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintRight_toLeftOf="@id/rvOrder"
        app:layout_constraintTop_toBottomOf="@id/recyclerViewCars"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_filter"
        android:padding="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        />

    <RelativeLayout
        android:id="@+id/rvOrder"
        android:layout_width="114dp"
        android:layout_height="46dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@id/imageViewFilterCar"
        app:layout_constraintBottom_toBottomOf="@id/imageViewFilterCar"
        android:background="@drawable/bc_button_purple_disabled"
        android:overScrollMode="never"
        >

        <TextView
            android:id="@+id/textOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/order"
            android:textColor="@color/white"
            android:fontFamily="@font/g_bold"
            android:textSize="16sp"
            />

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progressOrder"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:indeterminateTint="@color/white"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>