<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardAddressType"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="1dp"
        >

        <LinearLayout
            android:id="@+id/linearAddressType"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/bc_address_white"
            >

            <ImageView
                android:id="@+id/imageViewAddressType"
                android:layout_width="16dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_address_home"
                app:tint="#C0C2C9"
                android:layout_marginStart="16dp"
                />

            <TextView
                android:id="@+id/textViewAddressType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#C0C2C9"
                android:text="Дома"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/g_semi_bold"
                android:layout_marginEnd="16dp"
                />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</FrameLayout>