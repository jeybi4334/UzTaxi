<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <View
        android:id="@+id/div1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:background="#5E5E60"
        android:alpha="0.2"
        />

    <ImageView
        android:id="@+id/iconEnd"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_circle_end"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView1Address"
        app:layout_constraintBottom_toBottomOf="@id/textView1Address"
        android:layout_marginStart="30dp"
        />

    <TextView
        android:id="@+id/textView1Address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/purple_200"
        android:alpha="0.8"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginEnd="16dp"
        android:text="@string/around_city"
        app:layout_constraintTop_toBottomOf="@id/div1"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iconEnd"
        android:layout_marginLeft="24dp"
        android:fontFamily="@font/g_semi_bold"
        android:textSize="17sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>