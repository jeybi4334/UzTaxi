<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/parentFilter"
    android:background="?attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

        <TextView
            android:id="@+id/textViewOptionName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:textColor="#000000"
            android:text="Conditioner"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/g_semi_bold"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/switchFilter"
            app:layout_constraintTop_toTopOf="parent"
            />

    <TextView
        android:id="@+id/textViewOptionPrice"
        app:layout_constraintTop_toBottomOf="@id/textViewOptionName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="18dp"
        android:textColor="#000000"
        android:text="1000 sum"
        android:alpha="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/g_semi_bold"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/switchFilter"
        />



    <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchFilter"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="18dp"
            android:thumb="@drawable/thumb_selector"
            app:track="@drawable/track_selector"
            />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E4E9F2"
        android:alpha="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>