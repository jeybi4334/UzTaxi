<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground"
    android:id="@+id/parentPaymentMethod"
    >


    <ImageView
        android:id="@+id/imageViewPaymentMethod"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recyclerViewCars"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        android:paddingRight="8dp"
        android:src="@drawable/ic_money"
        />

    <TextView
        android:id="@+id/textViewPaymentType"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/pay_cash"
        android:textSize="18sp"
        android:textColor="#303030"
        android:fontFamily="@font/g_semi_bold"
        android:gravity="start"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginStart="12dp"
        />

    <ImageView
        android:visibility="gone"
        android:id="@+id/imageViewDone"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_done"
        android:padding="12dp"
        />

</LinearLayout>