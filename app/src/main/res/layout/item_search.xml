<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iconSearchItem"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_saerch_place"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"
        />

    <TextView
        android:id="@+id/textViewSearchTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iconSearchItem"
        app:layout_constraintRight_toRightOf="parent"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        android:text="Samarqand Darvoz"
        android:fontFamily="@font/g_semi_bold"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="16dp"
        android:textSize="17sp"
        android:textColor="#623571"
        android:ellipsize="end"
        />


    <TextView
        android:id="@+id/textViewSearchAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iconSearchItem"
        app:layout_constraintRight_toRightOf="parent"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        android:text="Uzbekistan, Tashkent, Khushnavo Street, 2"
        android:layout_marginRight="12dp"
        android:ellipsize="end"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/g_regular"
        android:layout_marginLeft="16dp"
        android:textSize="15sp"
        android:textColor="#623571"
        android:alpha="0.7"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="0.1dp"
        android:background="@color/purple_200"
        app:layout_constraintLeft_toLeftOf="@id/textViewSearchTitle"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>