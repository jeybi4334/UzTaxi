<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.8"
        android:gravity="center"
        android:layout_marginTop="52dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/lottieProfile"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:scaleType="centerCrop"
                android:layout_marginStart="12dp"
                />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieCoin"
                app:layout_constraintLeft_toLeftOf="@id/textViewBonus"
                android:layout_marginTop="-8dp"
                app:layout_constraintTop_toTopOf="@id/textViewBonus"
                android:layout_width="82dp"
                app:lottie_progress="0"
                android:layout_marginEnd="0dp"
                android:layout_height="42dp"
                app:layout_constraintBottom_toBottomOf="@id/textViewBonus"
                app:lottie_fileName="bonus.json"
                android:scaleType="centerCrop"
                />



            <TextView
                android:id="@+id/textViewBonus"
                android:paddingLeft="62dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="18dp"
                app:layout_constraintTop_toTopOf="@id/lottieProfile"
                app:layout_constraintBottom_toBottomOf="@id/lottieProfile"
                android:textColor="@color/black"
                android:text="@string/sum_0"
                android:fontFamily="@font/g_bold"
                android:textSize="16sp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearPayment"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_horizontal|bottom"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:paddingStart="18dp"
            android:gravity="center"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:text="@string/payment_type"
            android:textSize="18sp"
            android:fontFamily="@font/g_bold"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/textNavigationPayment"
            android:layout_width="match_parent"
            android:paddingStart="18dp"
            android:gravity="center"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:text="@string/cash"
            android:textSize="14sp"
            android:fontFamily="@font/g_regular"
            android:textColor="@color/black"
            />



    </LinearLayout>
        <TextView
            android:id="@+id/textNavigation0"
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:paddingStart="18dp"
            android:gravity="center"
            android:maxLines="1"
            android:layout_height="52dp"
            android:text="@string/ride_history"
            android:textSize="18sp"
            android:fontFamily="@font/g_bold"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/textNavigation1"
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:paddingStart="18dp"
            android:gravity="center"
            android:maxLines="1"
            android:layout_height="52dp"
            android:text="@string/my_addreses"
            android:textSize="18sp"
            android:fontFamily="@font/g_bold"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/textNavigation2"
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:paddingStart="18dp"
            android:gravity="center"
            android:maxLines="1"
            android:layout_height="52dp"
            android:text="@string/settings"
            android:textSize="18sp"
            android:fontFamily="@font/g_bold"
            android:textColor="@color/black"
            />


        <TextView
            android:id="@+id/textNavigation3"
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:paddingStart="18dp"
            android:gravity="center"
            android:maxLines="1"
            android:layout_height="52dp"
            android:text="@string/support_centre"
            android:textSize="18sp"
            android:fontFamily="@font/g_bold"
            android:textColor="@color/black"
            />



        <TextView
            android:id="@+id/textNavigation4"
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:paddingStart="18dp"
            android:gravity="center"
            android:maxLines="1"
            android:layout_height="52dp"
            android:text="@string/information"
            android:textSize="18sp"
            android:fontFamily="@font/g_bold"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_marginTop="24dp"
            android:id="@+id/textNavigation5"
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:paddingStart="18dp"
            android:gravity="center"
            android:maxLines="1"
            android:layout_height="52dp"
            android:text="@string/sign_out"
            android:textSize="18sp"
            android:fontFamily="@font/g_regular"
            android:textColor="@color/black"
            />





    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:src="@drawable/nav_pic"
        android:padding="48dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/version_number"
        android:layout_gravity="center"
        android:fontFamily="@font/g_regular"
        android:textColor="@color/black"
        android:layout_marginBottom="18dp"
        android:textSize="12sp"
        />

</LinearLayout>